<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
</head>

<body>

<header>
    <%- include('./partials/header'); %>
</header>

    <main>
            <% product.forEach (element=> {%>             
                

                <section>
                    <h1><%= element.producto %> </h1>
                    <img src= <%= element.imagen%> width="100%" alt="Planta">
                    </section> 
                    <section>
                        <div class="contenedor-caracteristicas">
                            <h2 class="contenedor-palabra-caracteristicas">Caracteristicas</h2>
                            <table> 
                                <tr>
                                    <td class="nombre-especie"><strong>Nombre de especie</strong></td>
                                    <td class="nombre"><%= element.producto %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Tipo de planta</strong></td>
                                        <td><%= element.descripcion %></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Cantidad de plantas</strong></td>
                                            <td>10</td>
                                            </tr>                                            
                                                <tr>
                                                    <td><strong>Ambiente</strong></td>
                                                    <td>Interior o exterior</td>
                                                    </tr>
                                                    </table>
                                                    </div> 
                                                    </section>  
                                                    <section>
                                                        <div class="contenedor-descripcion">
                                                            <h2 class="contenedor-palabra-descripcion">Descripci√≥n</h2>
                                                            <div class="parrafo"> <%= element.descripcion %> 
                                                                </div>
                                                                <h4><%= element.precio %></h4>
                                                                </div>
                                                                
                                                                </section>
                                                                <section>
                                                                    <div class="botones-compra">  
                                                                        <button class="boton1" name="Agregar" type="button" ><i class="fab fa-opencart"></i>
                                                                            Agregar al carrito
                                                                        </button>
                                                                        
                                                                        
                                                                        <button class="boton2" name="Comprar" type="button" ><i class="fas fa-credit-card"></i>
                                                                            Comprar ahora
                                                                        </button>
                                                                    </div> 
                                                                    <div class="boton-eliminar">  
                                                                        <button class="boton3" name="Eliminar" type="submit" ><i class="fas fa-trash-alt"></i>
                                                                            Eliminar
                                                                        </button>
                                                                    <% }) %> 
    </section>
    </main>
    <footer> 
        <%- include('./partials/footer'); %>
    </footer>
</body>

</html>