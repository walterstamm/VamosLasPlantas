<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>

</head>
<body>
<header>
    <%- include('./partials/header'); %>
</header>

<main>
    <form action="/product/nuevosProd" method="POST">
      
  
    <div class="register">Nuevo Producto</div>
    
     <div class="form-nuevosProd">
      <label for="producto">Nombre del Producto:</label>
      <input type="text" id="producto" name="producto">
    </div>

    <div class="form-nuevosProd">
      <label for="descripcion">Descripcion</label>
      <input type="text" name="descripcion" id="descripcion">
    </div>

    <div class="form-nuevosProd">
        <label for="precio">Precio</label>
        <input type="number"  id="precio" name="precio" min="1">
    </div>

    <div class="form-nuevosProd">
      <label for="categoria">Categoria</label>
      <select name="categoria"  id="categoria">
          <option value="1">Plantas Interior</option>
          <option value="2">Plantas Exterior</option>
          <option value="3">Macetas</option>
          <option value="4">Accesorios</option>
          <option value="5">Plantas Decoracion</option>
      </select>

      <button type="submit">Cargar</button>
          
    </fieldset>
  </form>
</main> 
</body>
<footer>
  <%- include('./partials/footer'); %>
</footer>
</html>